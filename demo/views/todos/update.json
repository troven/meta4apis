  "views": {
	"child": {
	  "label": "Edit To Do",
	  "icon": "/static/brand/favicon.png",
	  "className": "container",
	  "widget": "Tabs",
	  "tabs": {
		"About": {
		  "widget": "Form",
		  "model": false,
		  "schema": {
			"label": {
			  "widget": "Text",
			  "required": true,
			  "label": "Task Name",
			  "focus": true,
			  "className": "form-group"
			},
			"comment": {
			  "widget": "TextArea",
			  "label": "Description",
			  "className": "form-group"
			},
			"dueDate": {
			  "widget": "Date",
			  "label": "Due Date",
			  "className": "form-group"
			},
			"complete": {
			  "widget": "Boolean",
			  "label": "Completed",
			  "className": "form-group"
			}
		  }
		}
	  }
	}
  }
}